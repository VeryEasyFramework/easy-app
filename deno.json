{
  "name": "@vef/easy-app",
  "version": "0.4.14",
  "exports": "./mod.ts",
  "exclude": [
    "references",
    "dev/public"
  ],
  "publish": {
    "exclude": [
      ".github",
      "references",
      "dev"
    ],
    "include": [
      "./**/*",
      "src/client/**/*"
    ]
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-unused-vars",
        "no-explicit-any"
      ]
    }
  },
  "imports": {
    "#/": "./src/",
    "#orm/": "./src/orm/",
    "@vef/easy-cli": "jsr:@vef/easy-cli@^0.2.8",
    "@vef/easy-ops": "jsr:@vef/easy-ops@^0.1.3",
    "@vef/string-utils": "jsr:@vef/string-utils@^0.1.5",
    "@vef/types": "jsr:@vef/types@^0.1.15"
  },
  "tasks": {
    "dev": "cd dev && deno run -A --unstable-kv main.ts",
    "check": "deno publish --dry-run",
    "lint": "deno lint mod.ts src/**/*.ts",
    "update": "deno add jsr:@vef/easy-cli jsr:@vef/string-utils jsr:@vef/easy-ops jsr:@vef/types"
  }
}
