{
  "$schema": "https://raw.githubusercontent.com/VeryEasyFramework/easy-app/c6aa966fbec6ed7d043a74570c259b6e0c6819b3/src/appConfig/easyAppConfig.json",
  "appName": "Easy App",
  "singlePageApp": false,
  "staticFilesOptions": {
    "staticFilesRoot": "./public",
    "cache": true
  },
  "environment": "development",
  "realtimeOptions": {
    "enable": true,
    "port": 11254
  },
  "multiProcessing": {
    "enable": true,
    "processCount": "auto"
  },
  "workers": {
    "short": {
      "port": 12700
    },
    "medium": {
      "port": 12701
    },
    "long": {
      "port": 12702
    }
  },
  "easyPacks": [
    "authPack",
    "emailPack",
    "workersPack"
  ],
  "serverOptions": {
    "hostname": "127.0.0.1",
    "port": 8000
  },
  "ormOptions": {
    "databaseType": "postgres",
    "databaseConfig": {
      "size": 1,
      "debug": false,
      "clientOptions": {
        "user": "postgres",
        "password": "postgres",
        "database": "postgres",
        "host": "127.0.0.1",
        "port": 5432
      }
    }
  }
}
