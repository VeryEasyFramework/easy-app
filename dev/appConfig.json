{
  "$schema": "/home/eliveffer/VeryEasyFramework/app-orm/easy-app/src/appConfig/easyAppConfig.json",
  "appName": "dev",
  "singlePageApp": true,

  "staticFilesOptions": {
    "staticFilesRoot": "./public",
    "cache": true
  },
  "environment": "development",
  "realtimeOptions": {
    "enable": true,
    "port": 11254
  },
  "multiProcessing": {
    "enable": false,
    "processCount": 1,
    "max": 1
  },
  "workers": {
    "short": {
      "port": 12700
    },
    "medium": {
      "port": 12701
    },
    "long": {
      "port": 12702
    }
  },
  "easyPacks": [
    "authPack",
    "emailPack",
    "workersPack"
  ],
  "serverOptions": {
    "hostname": "127.0.0.1",
    "port": 8000
  },

  "ormOptions": {
    "databaseType": "postgres",
    "databaseConfig": {
      "size": 1,

      "clientOptions": {
        "user": "postgres",
        "password": "postgres",
        "database": "postgres",
        "host": "127.0.0.1",
        "port": 5432
      }
    }
  }
}
